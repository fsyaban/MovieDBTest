<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.bootcamp.common.entity.discover_movie.Result" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="16dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rating"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="104dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_rounded_primary"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/image"
                    tools:text="@{String.valueOf(data.voteAverage)}" />

                <LinearLayout

                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/image"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="@{data.title}" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="230dp"
                        android:id="@+id/genre"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_movie_24"
                        android:drawablePadding="8dp"
                        tools:text="Genre"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/release"
                        android:layout_width="72dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_rounded"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:text="@{data.releaseDate.substring(0,4)}" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>